{
    "version": 2,
    "builds": [
        {
            "src": "generate_blog.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "outputDirectory": "public",
    "buildCommand": "pip install -r requirements.txt && python generate_blog.py"
}